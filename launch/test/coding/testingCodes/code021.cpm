    ceaut(a);
    bul ~ptrA;
    ptrA = &a;
    ceaut(~ptrA);
    ~ptrA = fols;
    ceaut(a);
    ceaut(~ptrA);

    int ~ptrB = &b;
    ceaut(b);
    ceaut(~ptrB);
    ptrA = ptrB;
    ceaut(~ptrA);
